{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
      "preserveConstEnums": true,
      "module": "commonjs",
      "target": "es6",
      "moduleResolution":"node",
      "esModuleInterop": true,
      "jsx": "preserve",
      "strictFunctionTypes": true,
      "sourceMap": false,
      "outDir": "bin",
      "resolveJsonModule": true,
      "noStrictGenericChecks" : true,
      "baseUrl": ".",
      "paths": {
        "utils": ["src/lib/utils"],
        "cip/*": ["src/lib/cip/*"],
        "enip/*": ["src/lib/enip/*"],
        "cip": ["src/lib/cip"],
        "enip": ["src/lib/enip"]// This mapping is relative to "baseUrl"
      },
    },
    "include": ["src/lib/**/*", "src/tests/**/*"],
    "exclude": ["node_modules", "src/lib/enip_wrapper.ts",
      "src/lib/main.ts", "src/lib/tcp_client.ts",
      "src/lib/udp_client.ts"],
}